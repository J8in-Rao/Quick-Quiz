<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Background glass effect -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/glass_surface_variant" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- Subtle inner shadow -->
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#10000000" />
                    <corners android:radius="15dp" />
                </shape>
            </item>
            <!-- Border -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/glass_border" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <layer-list>
            <!-- Background glass effect -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#60FFFFFF" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- Subtle highlight -->
            <item android:top="1dp" android:left="1dp" android:right="20dp" android:bottom="30dp">
                <shape android:shape="rectangle">
                    <solid android:color="#20FFFFFF" />
                    <corners android:radius="15dp" />
                </shape>
            </item>
            <!-- Border -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#80CCCCCC" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Default state -->
    <item>
        <layer-list>
            <!-- Background gradient -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/gradient_start"
                        android:endColor="@color/gradient_end"
                        android:angle="45" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- Glass overlay -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#40FFFFFF" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- Subtle highlight on top -->
            <item android:top="1dp" android:left="1dp" android:right="20dp" android:bottom="30dp">
                <shape android:shape="rectangle">
                    <solid android:color="#30FFFFFF" />
                    <corners android:radius="15dp" />
                </shape>
            </item>
            <!-- Border -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/glass_border" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</selector>