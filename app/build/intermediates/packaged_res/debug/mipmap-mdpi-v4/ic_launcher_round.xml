<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Background circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/gradient_start" />
        </shape>
    </item>
    
    <!-- Glass overlay circle -->
    <item android:inset="8dp">
        <shape android:shape="oval">
            <solid android:color="@color/glass_surface" />
            <stroke 
                android:width="2dp" 
                android:color="@color/glass_border" />
        </shape>
    </item>
    
    <!-- Inner circle for Q -->
    <item android:inset="16dp">
        <shape android:shape="oval">
            <stroke 
                android:width="4dp" 
                android:color="@color/text_primary" />
        </shape>
    </item>
    
</layer-list>